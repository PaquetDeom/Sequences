<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sequences"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class> fr.paquet.referentiel.Activite</class>
		<class> fr.paquet.referentiel.Capacite</class>
		<class> fr.paquet.referentiel.Competence</class>
		<class> fr.paquet.referentiel.CompetenceIntermediaire</class>
		<class> fr.paquet.referentiel.Condition</class>
		<class> fr.paquet.referentiel.CritereEvaluation</class>
		<class> fr.paquet.referentiel.Fonction</class>
		<class> fr.paquet.referentiel.Rap</class>
		<class> fr.paquet.referentiel.Referentiel</class>
		<class> fr.paquet.referentiel.Savoir</class>
		<class> fr.paquet.referentiel.SavoirAssocie</class>
		<class> fr.paquet.referentiel.SousSavoirAssocie</class>
		<class> fr.paquet.referentiel.Tache</class>
		<class> fr.paquet.referentiel.Unite</class>

		<class> fr.paquet.sequence.Decouverte</class>
		<class> fr.paquet.sequence.Execution</class>
		<class> fr.paquet.sequence.Introduction</class>
		<class> fr.paquet.sequence.Phase</class>
		<class> fr.paquet.sequence.Pretexte</class>
		<class> fr.paquet.sequence.Sequence</class>
		<class> fr.paquet.sequence.Validation</class>
		<class>fr.paquet.commun.Diplome</class>


		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.hsqldb.jdbcDriver" />

			<property name="javax.persistence.jdbc.url"
				value="jdbc:hsqldb:hsql://localhost:5434/sequences" />
			<property name="javax.persistence.jdbc.user"
				value="sequences" />


			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />

			<property name="javax.persistence.jdbc.password"
				value="Login5340" />

			<!-- <property name="eclipselink.ddl-generation" value="none" /> -->


			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />


		</properties>


	</persistence-unit>
</persistence>